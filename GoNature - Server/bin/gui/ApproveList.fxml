            <Button fx:id="btnDecline" layoutX="492.0" layoutY="484.0" mnemonicParsing="false" onAction="#Decline" prefHeight="31.0" prefWidth="84.0" text="Decline">
               <font>
                  <Font size="15.0" />
               </font></Button>
            <Button fx:id="btnDisplayDiscount" layoutX="225.0" layoutY="86.0" mnemonicParsing="false" onAction="#DisplayDiscount" prefHeight="31.0" prefWidth="170.0" text="Display Discount Request" />
