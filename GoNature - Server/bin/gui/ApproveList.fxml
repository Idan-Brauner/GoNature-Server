            <Label layoutX="284.0" layoutY="14.0" text="Approve List">
               <font>
                  <Font name="Century Gothic Bold Italic" size="35.0" />
               </font>
               <textFill>
                  <RadialGradient centerX="0.5" centerY="0.49523809523809526" radius="1.0">
                     <stops>
                        <Stop color="#27610f" />
                        <Stop color="#00ff44" offset="1.0" />
                     </stops>
                  </RadialGradient>
               </textFill>
            </Label>
            <Button fx:id="btnApprove" layoutX="619.0" layoutY="484.0" mnemonicParsing="false" onAction="#Approve" prefHeight="31.0" prefWidth="84.0" text="Approve">
               <font>
                  <Font size="15.0" />
               </font></Button>
            <TableView fx:id="tableApproveList" layoutX="38.0" layoutY="127.0" onMouseClicked="#displaySelected" prefHeight="281.0" prefWidth="694.0">
              <columns>
                <TableColumn fx:id="txtPark" prefWidth="102.0" text="Park Name" />
