<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ApproveListController">
   <children>
      <AnchorPane layoutX="-7.0" prefHeight="572.0" prefWidth="749.0">
